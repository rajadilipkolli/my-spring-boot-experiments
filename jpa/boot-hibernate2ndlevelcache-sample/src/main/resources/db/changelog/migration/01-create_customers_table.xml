<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet author="appuser" id="createTable-customers">
        <preConditions>
            <not>
                <sequenceExists sequenceName="customer_id_seq" />
                <tableExists tableName="customers" />
            </not>
        </preConditions>
        <createSequence sequenceName="customer_id_seq" incrementBy="100" startValue="1" />
        <createTable tableName="customers">
            <column name="id" type="bigint" defaultValueSequenceNext="customer_id_seq">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="first_name" type="varchar(1024)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)" />
            <column name="email" type="varchar(255)" />
            <column name="phone" type="varchar(255)" />
        </createTable>
    </changeSet>
</databaseChangeLog>