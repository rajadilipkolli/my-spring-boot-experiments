<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 	<include resource="org/springframework/boot/logging/logback/base.xml" />
 	<springProperty scope="context" name="appName" source="spring.application.name"/>
 	<springProperty scope="context" name="lokiUri" source="loki.uri"/>

 	<appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
 		<!-- Batch configuration moved to separate section in v2.0 -->
 		<batch>
 			<timeoutMs>2000</timeoutMs>
 		</batch>
 		
 		<!-- HTTP configuration -->
 		<http>
 			<url>${lokiUri:-http://localhost:3100/loki/api/v1/push}</url>
 		</http>
 		
 		<!-- Labels configuration (was format.label.pattern in v1.6) -->
 		<labels>
			application=${appName}
			hostname=${HOSTNAME}
			traceID=%X{traceId:-NONE}
			level=%level
 		</labels>
 		
 		<!-- Message configuration (was format.message.pattern in v1.6) -->
 		<message>
 			<pattern>${FILE_LOG_PATTERN}</pattern>
 		</message>
 		
 		<!-- Enable metrics -->
 		<metricsEnabled>true</metricsEnabled>
 	</appender>

 	<root level="INFO">
 		<appender-ref ref="LOKI"/>
 	</root>

    <logger name="com.example.plugin" level="DEBUG"/>
    <logger name="org.springframework" level="INFO"/>
    <!-- Enable Loki4j debug logging to troubleshoot issues -->
    <logger name="com.github.loki4j" level="DEBUG"/>
</configuration>
